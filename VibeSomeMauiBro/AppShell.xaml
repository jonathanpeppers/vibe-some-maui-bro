<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VibeSomeMauiBro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VibeSomeMauiBro"
    xmlns:views="clr-namespace:VibeSomeMauiBro.Views"
    Title="CatSwipe"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Swipe"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Collection"
            Icon="dotnet_bot.png"
            ContentTemplate="{DataTemplate views:CollectionPage}"
            Route="collection" />
    </TabBar>

</Shell>
