<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CatSwipe.Models"
             xmlns:views="clr-namespace:CatSwipe.Views"
             x:Class="CatSwipe.Views.CollectionPage"
             x:DataType="views:CollectionPage"
             Title="My Collection"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#1a1a1a">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0" 
               Text="ðŸ’• Your Cat Collection" 
               FontSize="24" 
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="20" />

        <!-- Collection Grid -->
        <CollectionView Grid.Row="1" 
                        x:Name="CatsCollectionView"
                        ItemsSource="{Binding LikedCats}"
                        BackgroundColor="Transparent">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" 
                                 Span="2" 
                                 HorizontalItemSpacing="10" 
                                 VerticalItemSpacing="10" />
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Cat">
                    <Grid>
                        <Border BackgroundColor="White"
                                StrokeShape="RoundRectangle 15"
                                Padding="5"
                                HeightRequest="200">
                            <Border.Shadow>
                                <Shadow Brush="Black" Opacity="0.3" Radius="10" />
                            </Border.Shadow>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                
                                <!-- Cat Image -->
                                <Image Grid.Row="0"
                                       Source="{Binding ImageUrl}"
                                       Aspect="AspectFill"
                                       BackgroundColor="#f0f0f0" />
                                
                                <!-- Cat Info -->
                                <StackLayout Grid.Row="1" 
                                             Padding="10,5"
                                             BackgroundColor="White">
                                    <Label Text="{Binding Breed, FallbackValue='Unknown Breed'}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="#333" />
                                    <Label Text="{Binding LikedAt, StringFormat='Liked {0:MM/dd/yyyy}', FallbackValue='Recently liked'}"
                                           FontSize="12"
                                           TextColor="#666" />
                                </StackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <CollectionView.EmptyView>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="ðŸ˜¿" 
                           FontSize="60" 
                           HorizontalOptions="Center" />
                    <Label Text="No cats in your collection yet!"
                           FontSize="18"
                           TextColor="White"
                           HorizontalOptions="Center"
                           Margin="0,10" />
                    <Label Text="Go back and start swiping to find your purr-fect matches!"
                           FontSize="14"
                           TextColor="#ccc"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="20,0" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>