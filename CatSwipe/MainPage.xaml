<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatSwipe.MainPage"
             Title="CatSwipe"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#1a1a1a">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Grid.Row="0" 
                     Orientation="Horizontal" 
                     HorizontalOptions="FillAndExpand"
                     Padding="20">
            <Label Text="🐱 CatSwipe" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="StartAndExpand" />
            
            <Button Text="💕"
                    FontSize="20"
                    BackgroundColor="#4a4a4a"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="40"
                    HeightRequest="40"
                    Clicked="OnCollectionClicked" />
        </StackLayout>

        <!-- Card Stack Container -->
        <AbsoluteLayout Grid.Row="1" 
                        x:Name="CardContainer"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        Margin="20">
            
            <!-- Loading indicator -->
            <StackLayout x:Name="LoadingIndicator"
                         IsVisible="True"
                         AbsoluteLayout.LayoutBounds="0.5,0.5,200,100"
                         AbsoluteLayout.LayoutFlags="PositionProportional">
                <ActivityIndicator IsRunning="True" 
                                   Color="White"
                                   VerticalOptions="Center" />
                <Label Text="Loading cats..."
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       FontSize="16" />
            </StackLayout>

            <!-- No more cats message -->
            <StackLayout x:Name="NoMoreCatsMessage"
                         IsVisible="False"
                         AbsoluteLayout.LayoutBounds="0.5,0.5,300,200"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <Label Text="😺" 
                       FontSize="80" 
                       HorizontalTextAlignment="Center" />
                <Label Text="No more cats!"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       Margin="0,10" />
                <Label Text="You've seen all available cats for now."
                       FontSize="16"
                       TextColor="#ccc"
                       HorizontalTextAlignment="Center"
                       Margin="0,5" />
                <Button Text="Load More Cats"
                        BackgroundColor="#ff4458"
                        TextColor="White"
                        CornerRadius="25"
                        Margin="0,20"
                        Clicked="OnLoadMoreCatsClicked" />
            </StackLayout>
        </AbsoluteLayout>

        <!-- Action Buttons -->
        <StackLayout Grid.Row="2" 
                     Orientation="Horizontal" 
                     HorizontalOptions="Center"
                     Spacing="40"
                     Margin="20">
            
            <Button x:Name="DislikeButton"
                    Text="❌"
                    FontSize="30"
                    BackgroundColor="#ccc"
                    TextColor="White"
                    CornerRadius="35"
                    WidthRequest="70"
                    HeightRequest="70"
                    Clicked="OnDislikeClicked" />
            
            <Button x:Name="LikeButton"
                    Text="❤️"
                    FontSize="30"
                    BackgroundColor="#4a4a4a"
                    TextColor="White"
                    CornerRadius="35"
                    WidthRequest="70"
                    HeightRequest="70"
                    Clicked="OnLikeClicked" />
        </StackLayout>
    </Grid>
</ContentPage>
